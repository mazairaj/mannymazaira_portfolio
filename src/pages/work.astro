const youtubeVideos = [...baseVideos, ...additionalWorkVideos];
---

<BaseLayout
	title="My Work | Manny Mazaira"
	description="Learn about Manny Mazaira's most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8" style="max-width: 90rem; margin: 0 auto;">
			<div class="youtube-section">
				<YouTubeVideos videos={youtubeVideos} />
			</div>
		</main>
		<!-- <ContactCTA /> -->
	</div>
</BaseLayout>

<style>
	.section-title {
		font-size: var(--text-2xl);
		color: var(--gray-0);
		margin-bottom: 2rem;
	}

	@media (min-width: 50em) {
		.section-title {
			font-size: var(--text-3xl);
		}
	}

	.work-video-section {
		margin: 4rem 0;
	}

	@media (min-width: 50em) {
		.work-video-section {
			margin: 6rem 0;
		}
	}

	.youtube-section {
		padding-top: 4rem;
	}
</style>