---
import BaseLayout from '../layouts/BaseLayout.astro';
import BentoGrid from '../components/bento/BentoGrid.astro';

const bentoItems = [
  {
    title: "Motion Graphics & VFX Artist",
    description: "Experienced artist with expertise in FX Networks, Eikon Group, and Hulu, specializing in motion graphics and visual effects",
    icon: "video-editing",
    class: "col-span-1 row-span-1 md:col-span-2",
    gradient: "bg-gradient-to-br from-purple-500/10 to-pink-500/10 hover:from-purple-500/20 hover:to-pink-500/20"
  },
  {
    title: "3D Designer",
    description: "Skilled in computer animation and Houdini, with advanced studies from AnimationMentor.com",
    icon: "microphone-stage",
    class: "col-span-1 row-span-1",
    gradient: "bg-gradient-to-br from-blue-500/10 to-purple-500/10 hover:from-blue-500/20 hover:to-purple-500/20"
  },
  {
    title: "Creative Technologist",
    description: "Combining motion graphics with generative AI and modular synthesis for innovative visual experiences",
    icon: "youtube-logo",
    class: "col-span-1 row-span-1",
    gradient: "bg-gradient-to-br from-pink-500/10 to-rose-500/10 hover:from-pink-500/20 hover:to-rose-500/20"
  },

];
---

<BaseLayout title="Bento Portfolio | Manny Mazaira" description="Bento-style portfolio showcasing my work">
  <main class="wrapper">
    <h1 class="title">Manny Mazaira</h1>
    <p class="subtitle">Video Editor & Content Creator</p>
    <BentoGrid items={bentoItems} />
  </main>
</BaseLayout>

<style>
  .wrapper {
    padding: 2rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .title {
    font-size: var(--text-4xl);
    color: var(--gray-0);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .subtitle {
    font-size: var(--text-xl);
    color: var(--gray-300);
    text-align: center;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .wrapper {
      padding: 4rem 2rem;
    }
  }
</style>